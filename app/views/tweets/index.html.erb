

<div class="container-fluid">
			
              <%= form_tag tweets_path, :method => "get"  do %>
				    <%= label_tag :search, "Enter Twitter username :"  %>
				    <%= text_field_tag :search, params[:search] %>
				    <%= submit_tag "View Tweets", :name => nil %>
			  <% end %>

			  <ul class='tweets'>
				<% @tweets.each do |t| %>
					<li><%= t.text %> created at <%= t.created_at %> by <%= t.user.screen_name %></li>
				<% end %>
			  </ul>
             

              <button id="saveTweets" class="btn">Save Tweets</button>
               
                     
               </script>
              
</div>